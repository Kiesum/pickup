<% @events.each do |event| %>
  <%= link_to event.sport, event_path(event) %>


<!DOCTYPE html>
<html>
  <head>
    <style>
      #map {
        width: 100%;
        height: 400px;
      }
    </style>
  </head>
  <body>
    <h1>My Google Maps Demo</h1>
      <div id="map"></div>
      <script>
        function initMap() {
          var mapDiv = document.getElementById('map');
          var LatLng = {lat: <%= event.latitude %>, lng: <%= event.longitude %> }; 

          var map = new google.maps.Map(mapDiv, {
            center: {lat: 48.4267026, lng: -123.3935215},
            zoom: 8
          });

          var contentString = '<div><%= event.sport %></div>' +
            '<div><%= event.datetime %></div>'

          var infowindow = new google.maps.InfoWindow({
            content: contentString
          });

          var marker = new google.maps.Marker({
            position: LatLng,
            map: map,
            title: 'Hello World!'
          });

          marker.addListener('click', function() {
            infowindow.open(map, marker);
          });

        }
    </script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq5MfneZn7AftwwvG7m4ifBf28uU5NXnk&callback=initMap">
    </script>
  </body>
</html>

<% end %>

<%= link_to 'new event', new_event_path(@event) %>